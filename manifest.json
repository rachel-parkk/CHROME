{
  "manifest_version": 2,
  "name": "Website List",
  "version": "1.0",
  "description": "A Chrome extension to add websites to a list.",
  "permissions": ["storage", "activeTab"],
  "browser_action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "48": "icon.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  }
}
